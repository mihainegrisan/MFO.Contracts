<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>MFO.Contracts</PackageId>
    <Version>1.0.12</Version>
    <Authors>Mihai Negrisan</Authors>
    <Company>MFrontier Outpost</Company>
    <Description>Shared DTOs and event contracts for MFO microservices.</Description>
    <RepositoryUrl>https://github.com/mihainegrisan/MFO.Contracts</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Catalog\Events\**" />
    <Compile Remove="Catalog\RequestsResponses\**" />
    <Compile Remove="Shared\Enums\**" />
    <EmbeddedResource Remove="Catalog\Events\**" />
    <EmbeddedResource Remove="Catalog\RequestsResponses\**" />
    <EmbeddedResource Remove="Shared\Enums\**" />
    <None Remove="Catalog\Events\**" />
    <None Remove="Catalog\RequestsResponses\**" />
    <None Remove="Shared\Enums\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove=".gitattributes" />
    <None Remove=".gitignore" />
    <None Remove="README.md" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Catalog\DTOs\" />
    <Folder Include="Catalog\" />
  </ItemGroup>

</Project>
